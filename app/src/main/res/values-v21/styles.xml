<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:toolbarStyle">@android:style/Widget.Material.Toolbar</item>
    </style>

    <style name="Theme.Transparent" parent="android:Theme.Material.Dialog.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@drawable/notification_background</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:toolbarStyle">@android:style/Widget.Material.Toolbar</item>
    </style>

    <style name="buttonScroll" parent="android:Widget.Material.Button">
        <item name="android:layout_weight">14</item>
        <item name="android:background">#30ffffff</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ToolBarStyle" parent="">
        <item name="android:theme">@android:style/ThemeOverlay.Material.Dark.ActionBar</item>
        <item name="android:popupTheme">@android:style/ThemeOverlay.Material.Light</item>
        <item name="android:colorBackground">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:toolbarStyle">@android:style/Widget.Material.Toolbar</item>
        <item name="android:elevation">4dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:contentInsetRight">0dp</item>
        <item name="android:contentInsetEnd">0dp</item>
    </style>

    <style name="Theme.ProgressBarTheme" parent="@android:style/Widget.Material.Light.ProgressBar.Small">
        <item name="android:autoStart">true</item>
    </style>

    <style name="Theme.Switch" parent="android:Theme.Material.Light">
        <item name="android:colorControlActivated">@color/switchColorOn</item>
        <item name="android:colorAccent">@color/switchColorOn</item>
        <item name="colorSwitchThumbNormal">@color/switchColorThumbNormal</item>
        <item name="android:colorForeground">@color/switchColorNormal</item>
        <item name="android:textOn">On</item>
        <item name="android:textOff">Off</item>
    </style>

    <style name="Theme.HourlyProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:max">100</item>
        <item name="android:scaleY">1.2</item>
        <item name="android:minHeight">10dp</item>
        <item name="android:progressTint">@color/colorPrimaryDark</item>
        <item name="android:progressBackgroundTint">#301976D2</item>
    </style>

    <style name="Theme.LocationProgress" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:minHeight">8dp</item>
        <item name="android:indeterminateOnly">true</item>
    </style>
</resources>