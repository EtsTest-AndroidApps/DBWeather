<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="Article"
            type="com.dbeginc.dbweather.models.datatypes.news.Article"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/alert_light_frame">

        <android.support.constraint.Guideline
            android:id="@+id/source_icon_end_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1"/>

        <android.support.constraint.Guideline
            android:id="@+id/expand_button_start_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9"/>

        <ImageView
            android:id="@+id/imv_news_image"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/no_image_icon"
            app:setImageUrl="@{Article.urlToImage}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="News Icon" />

        <ImageView
            android:id="@+id/civ_source_icon"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/four_four_two_logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imv_news_image"
            app:layout_constraintRight_toLeftOf="@id/source_icon_end_limit"/>

        <TextView
            android:id="@+id/txv_source_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_marginTop="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:text="@{Article.author}"
            app:layout_constraintLeft_toRightOf="@id/civ_source_icon"
            app:layout_constraintRight_toLeftOf="@+id/txv_news_time"
            app:layout_constraintTop_toBottomOf="@id/imv_news_image"
            tools:text="BBC-NEWS" />

        <TextView
            android:id="@+id/txv_news_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:padding="8dp"
            android:textColor="@android:color/black"
            android:text="@{Article.publishedAt}"
            app:setFont="@{true}"
            app:layout_constraintTop_toTopOf="@id/txv_source_name"
            app:layout_constraintLeft_toRightOf="@id/txv_source_name"
            app:layout_constraintRight_toLeftOf="@+id/ib_expand_news"
            app:layout_constraintBottom_toBottomOf="@id/txv_source_name"
            tools:text="14/05/2017 12:26" />

        <ImageButton
            android:id="@+id/ib_expand_news"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:backgroundTint="@android:color/white"
            app:srcCompat="@drawable/open_in_browser"
            app:layout_constraintTop_toBottomOf="@id/imv_news_image"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/expand_button_start_limit" />

        <TextView
            android:id="@+id/txv_news_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_marginTop="16dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="@{Article.title}"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txv_source_name"
            tools:text="God love everybody and you too" />

        <TextView
            android:id="@+id/txv_news_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="start"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp"
            android:text="@{Article.description}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txv_news_title"
            tools:text="Le president trump Le president trump Le president trump Le president trump Le president trump Le president trump Le president trumpLe president trump" />


    </android.support.constraint.ConstraintLayout>
</layout>