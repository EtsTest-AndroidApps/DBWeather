<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data />

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/intro_layout_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/intro_location_permission_background">


        <android.support.constraint.Guideline
            android:id="@+id/animation_top_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.4" />

        <TextView
            android:id="@+id/txv_intro_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:text="@string/location_permission_page_title"
            android:textColor="@android:color/white"
            android:textSize="32sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:setFont="@{true}" />

        <TextView
            android:id="@+id/txv_intro_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/location_permission_page_desc"
            android:textColor="@android:color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txv_intro_title"
            app:setFont="@{true}" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lav_intro_animation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/animation_top_limit"
            app:lottie_cacheStrategy="strong"
            app:lottie_autoPlay="true"
            app:lottie_fileName="location_pin.json"
            app:lottie_loop="true" />

    </android.support.constraint.ConstraintLayout>
</layout>