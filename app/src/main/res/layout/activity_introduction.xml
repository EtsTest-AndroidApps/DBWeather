<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="@color/colorPrimaryDark"
        tools:context="com.dbeginc.dbweather.ui.introduction.IntroductionActivity">

        <android.support.constraint.Guideline
            android:id="@+id/gdl_viewpager_bottom_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.9"/>

        <com.dbeginc.dbweather.ui.introduction.viewpager.IntroViewPager
            android:id="@+id/vpg_intro_id"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/gdl_viewpager_bottom_limit"/>

        <ImageButton
            android:id="@+id/btn_precedent"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            style="@style/IntroButton"
            android:filterTouchesWhenObscured="true"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"
            app:srcCompat="@drawable/back_button_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/gdl_viewpager_bottom_limit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/btn_next"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            android:contentDescription="@string/back_btn"/>

        <ImageButton
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            style="@style/IntroButton"
            app:srcCompat="@drawable/next_button_icon"
            android:filterTouchesWhenObscured="true"
            app:layout_constraintTop_toTopOf="@id/gdl_viewpager_bottom_limit"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btn_precedent"
            android:contentDescription="@string/next_btn"
            />

        <me.relex.circleindicator.CircleIndicator
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:id="@+id/pageIndicator"
            app:layout_constraintTop_toBottomOf="@id/gdl_viewpager_bottom_limit"
            app:layout_constraintLeft_toRightOf="@id/btn_precedent"
            app:layout_constraintRight_toLeftOf="@id/btn_next"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>

</layout>