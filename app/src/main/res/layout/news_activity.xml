<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:bind="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="Article"
            type="com.darelbitsy.dbweather.models.datatypes.news.Article"/>
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

        <include
            android:id="@+id/newsToolbar"
            bind:Article="@{Article}"
            layout="@layout/news_toolbar"/>

        <FrameLayout
            android:id="@+id/newsFrameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/newsToolbar">

            <ImageView
                android:id="@+id/articleImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerInside"
                android:src="@drawable/no_image_icon"/>

            <ProgressBar
                android:id="@+id/newsProgressBar"
                style="@style/Theme.ProgressBarTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:visibility="invisible"/>

        </FrameLayout>

        <ScrollView
            android:id="@+id/newsHorizontallSV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/newsFrameLayout">

            <TextView
                android:id="@+id/articleDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="8dp"
                app:setFont="@{true}"
                android:text="@{Article.description}"/>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/newsHorizontallSV"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingEnd="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingStart="8dp">

            <Button
                android:id="@+id/closeButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:filterTouchesWhenObscured="true"
                android:text="@string/news_close_text"
                app:setFont="@{true}"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/openInBrowserButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:filterTouchesWhenObscured="true"
                android:text="@string/open_in_browser_text"
                app:setFont="@{true}"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </RelativeLayout>
</layout>