<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="Presenter"
            type="com.darelbitsy.dbweather.ui.welcome.WelcomeActivityPresenter"/>
    </data>
<android.support.constraint.ConstraintLayout
                android:background="@drawable/clear_day_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <android.support.constraint.Guideline
        android:id="@+id/powered_by_top_limit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9"/>

    <ImageView
        android:id="@+id/imv_app_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/about_us"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#FFFF00"
        android:gravity="center_horizontal"
        android:text="Powered by Dark Sky"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/powered_by_top_limit"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="8dp"/>
</android.support.constraint.ConstraintLayout>
</layout>