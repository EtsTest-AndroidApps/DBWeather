<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:background="@drawable/rounded_bg"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

    <TextView
        android:id="@+id/hourlyTemperatureLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:textColor="@android:color/black"
        android:gravity="center_horizontal|center_vertical"
        android:text="100"/>

    <ImageView
        android:id="@+id/hourlyIconImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/temperatureLabel"
        android:paddingBottom="15dp"
        android:layout_centerInParent="true"
        android:src="@drawable/partly_cloudy"/>

    <TextView
        android:id="@+id/hourlySummaryLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:layout_below="@id/hourlyIconImageView"
        android:textColor="@android:color/black"
        tools:text="Partly Cloudly"/>

    <TextView
        android:id="@+id/hourlyTimeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_below="@id/hourlySummaryLabel"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_centerHorizontal="true"
        tools:text="12 PM"/>

</RelativeLayout>