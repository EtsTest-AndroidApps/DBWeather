<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="NewsPaper"
            type="com.dbeginc.dbweathernews.viewmodels.NewsPaperModel" />
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/newsPaperDetailLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.dbeginc.dbweather.newspaperdetail.NewsPaperDetailFragment">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/newsPaperDetailAppBar"
            style="@style/Widget.Design.AppBarLayout"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/newsPaperDetailCollapsingTL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <ImageView
                    android:id="@+id/newsPaperDetailLanguage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/source_language"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.7"
                    app:setImageUrl="@{@string/imageFlag(NewsPaper.country)}" />

                <android.support.v7.widget.Toolbar
                    android:id="@+id/newsPaperDetailToolbar"
                    style="@style/Widget.AppCompat.Toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_gravity="top"
                    app:layout_collapseMode="pin"
                    app:layout_scrollFlags="scroll|enterAlways"
                    app:navigationIcon="@drawable/ic_arrow"
                    app:popupTheme="?attr/popupTheme"
                    app:title="@{NewsPaper.id}"
                    app:titleTextAppearance="@style/TextAppearance.AppCompat.Title" />

            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/articleDetailContentContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/sourceDetailContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp">

                <TextView
                    android:id="@+id/sourceDetailNameLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/name"
                    android:textAlignment="textStart"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    app:layout_constraintBottom_toTopOf="@+id/sourceDetailName"
                    app:layout_constraintEnd_toStartOf="@+id/sourceDetailCategoryLabel"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/sourceDetailName"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@{NewsPaper.name}"
                    android:textAlignment="textStart"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    app:layout_constraintBottom_toTopOf="@id/sourceDetailDescription"
                    app:layout_constraintEnd_toStartOf="@+id/sourceDetailCategory"
                    app:layout_constraintStart_toStartOf="@id/sourceDetailNameLabel"
                    app:layout_constraintTop_toBottomOf="@id/sourceDetailNameLabel"
                    tools:text="BBC Sport" />

                <TextView
                    android:id="@+id/sourceDetailCategoryLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/category"
                    android:textAlignment="textEnd"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    app:layout_constraintBottom_toTopOf="@+id/sourceDetailCategory"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/sourceDetailNameLabel"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/sourceDetailCategory"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@{NewsPaper.category}"
                    android:textAlignment="textEnd"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    app:layout_constraintBottom_toTopOf="@id/sourceDetailDescription"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/sourceDetailName"
                    app:layout_constraintTop_toBottomOf="@id/sourceDetailCategoryLabel"
                    tools:text="Sport" />

                <TextView
                    android:id="@+id/sourceDetailDescription"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@{NewsPaper.description}"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/sourceDetailName"
                    tools:text="BBC IS one the beggest stuff ever" />

            </android.support.constraint.ConstraintLayout>
        </android.support.v4.widget.NestedScrollView>

    </android.support.design.widget.CoordinatorLayout>
</layout>
