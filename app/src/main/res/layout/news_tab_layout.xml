<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/news_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/newsTabColor">

        <android.support.constraint.Guideline
            android:id="@+id/newsTabsBottomLimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.1"/>

        <com.roughike.bottombar.BottomBar
            android:id="@+id/newsTopTabs"
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:background="@android:color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/newsTabsBottomLimit"
            app:bb_tabXmlResource="@xml/news_top_tabs"
            app:bb_inActiveTabColor="@color/topInactiveTabColor"
            app:bb_activeTabColor="@color/newsTabColor"
            app:bb_showShadow="true"/>

        <com.google.android.gms.ads.AdView
            android:id="@+id/news_view_ads"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            ads:adSize="SMART_BANNER"
            ads:adUnitId="ca-app-pub-3786486250382359/6576133025"
            app:layout_constraintTop_toBottomOf="@id/newsTopTabs"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />


        <FrameLayout
            android:id="@+id/newsContainer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/news_view_ads"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/srl_refresh_timeline"
            android:layout_width="0dp"
            android:layout_height="64dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/news_view_ads">

            <ScrollView
                android:id="@+id/placeholder"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v4.widget.SwipeRefreshLayout>
    </android.support.constraint.ConstraintLayout>
</layout>