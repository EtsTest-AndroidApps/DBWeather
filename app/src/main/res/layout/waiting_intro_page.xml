<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.dbeginc.dbweather.R"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/intro_layout_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        tools:background="#000000">

        <android.support.constraint.Guideline
            android:id="@+id/leftLimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1"/>

        <android.support.constraint.Guideline
            android:id="@+id/rightLimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9"/>

        <android.support.constraint.Guideline
            android:id="@+id/header_desc_bottom_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.35"/>

        <android.support.constraint.Guideline
            android:id="@+id/animation_bottom_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.7"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/waiting_page_desc"
            android:textColor="@android:color/white"
            android:textStyle="italic"
            android:textSize="24sp"
            android:gravity="center_horizontal"
            android:paddingTop="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/leftLimit"
            app:layout_constraintRight_toLeftOf="@id/rightLimit"
            app:layout_constraintBottom_toTopOf="@id/header_desc_bottom_limit"/>

        <ImageView
            android:id="@+id/waiting_img"
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:src="@drawable/waiting_anim"
            app:setGifImage="@{R.drawable.waiting_anim}"
            app:layout_constraintTop_toBottomOf="@id/header_desc_bottom_limit"
            app:layout_constraintLeft_toRightOf="@id/leftLimit"
            app:layout_constraintRight_toLeftOf="@id/rightLimit"
            app:layout_constraintBottom_toTopOf="@id/animation_bottom_limit" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lav_intro_animation"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/animation_bottom_limit"
            app:layout_constraintLeft_toRightOf="@id/leftLimit"
            app:layout_constraintRight_toLeftOf="@id/rightLimit"
            app:lottie_autoPlay="true"
            app:lottie_fileName="material_loading_2.json"
            app:lottie_loop="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/made_by"
            android:textColor="@android:color/white"
            android:textStyle="italic"
            android:textSize="16sp"
            android:gravity="center_horizontal"
            android:padding="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>
</layout>