<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:draggable_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/main_list_of_live_news"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <com.dbeginc.dbweather.ui.customviews.DraggableView
            android:id="@+id/youtubeViewContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            draggable_view:top_view_id="@+id/youtubePlayerContainer"
            draggable_view:top_view_height="200dp"
            draggable_view:bottom_view_id="@+id/list_of_live_news"
            draggable_view:enable_click_to_maximize_view="true"
            draggable_view:enable_click_to_minimize_view="false">

            <FrameLayout
                android:id="@+id/youtubePlayerContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout_height="200dp"
                tools:background="@android:color/black"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/list_of_live_news"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.dbeginc.dbweather.ui.customviews.DraggableView>
    </android.support.constraint.ConstraintLayout>

</layout>