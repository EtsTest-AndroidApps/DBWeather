<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/news_config_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:drawable/dialog_holo_light_frame"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <TextView
        android:id="@+id/newsSourceTitle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/news_count_picker"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="BBC NEWS"
        android:paddingTop="8dp"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:gravity="center_horizontal"
        android:background="@android:color/holo_red_light"/>

    <NumberPicker
        android:id="@+id/news_count_picker"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/newsSourceTitle"
        app:layout_constraintRight_toLeftOf="@+id/news_source_switch"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/news_source_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Theme.Switch"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/news_count_picker"
        app:layout_constraintBottom_toBottomOf="parent"/>


</android.support.constraint.ConstraintLayout>