<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".utils.helper.NotificationHelper">

        <include
            android:id="@+id/notificationToolbar"
            layout="@layout/notification_toolbar" />

        <TextView
            android:id="@+id/notification_description_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/notificationToolbar"
            android:gravity="center_horizontal|center_vertical"
            android:padding="8dp"
            android:textColor="@android:color/black"
            tools:text="Today in the morning it' will rain.\nWe recommend to take a parra-pluie,\n\n Loppersum est une commune des Pays-Bas, située dans la province de Groningue. Elle compte 11 000 habitants et sa superficie est de 112 km²." />

        <TextView
            android:id="@+id/notificationSummaryWeather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/notification_description_label"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal|center_vertical"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:textColor="@android:color/black"
            tools:text="Partly-Cloudly" />

        <ImageView
            android:id="@+id/notificationIconWeather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/notificationToolbar"
            android:padding="8dp"
            tools:src="@drawable/clear_day"/>
    </RelativeLayout>
</layout>