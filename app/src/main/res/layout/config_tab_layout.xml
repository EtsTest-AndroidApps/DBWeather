<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/config_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/config_tab_title"
            android:textSize="24sp"
            android:textColor="@color/configTabColor"
            android:layout_marginTop="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <android.support.constraint.Guideline
            android:id="@+id/iconRightLimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.2"/>

        <android.support.constraint.Guideline
            android:id="@+id/switchLeftLimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.8"/>

        <android.support.constraint.Guideline
            android:id="@+id/manageLocationsTopLimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.2"/>

        <LinearLayout
            android:id="@+id/manageLocationsLineBottom"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:orientation="horizontal"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="16dp"
            android:layout_marginStart="32dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/manageLocationsLabel"
            app:layout_constraintRight_toRightOf="parent"/>


        <ImageView
            android:id="@+id/manageLocationsIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:tint="@color/configTabColor"
            app:srcCompat="@drawable/city_location_icon"
            app:layout_constraintTop_toBottomOf="@id/manageLocationsTopLimit"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/iconRightLimit"
            app:layout_constraintBottom_toTopOf="@id/manageLocationsLineBottom"/>

        <TextView
            android:id="@+id/manageLocationsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@string/manage_cities"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@id/manageLocationsTopLimit"
            app:layout_constraintLeft_toRightOf="@id/iconRightLimit"
            app:layout_constraintRight_toLeftOf="@id/switchLeftLimit"/>

        <android.support.constraint.Guideline
            android:id="@+id/notificationBottomLimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.4"/>

        <ImageView
            android:id="@+id/notificationIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:tint="@color/configTabColor"
            app:srcCompat="@drawable/ic_notifications_black_24dp"
            app:layout_constraintTop_toBottomOf="@id/manageLocationsLineBottom"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/iconRightLimit"
            app:layout_constraintBottom_toTopOf="@id/notificationBottomLimit" />

        <TextView
            android:id="@+id/notificationLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:text="@string/notification_config_title"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@id/manageLocationsLineBottom"
            app:layout_constraintLeft_toRightOf="@id/iconRightLimit"
            app:layout_constraintRight_toLeftOf="@id/switchLeftLimit"
            app:layout_constraintBottom_toTopOf="@id/notificationBottomLimit"/>

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/notificationSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="@id/notificationLabel"
            app:layout_constraintLeft_toRightOf="@id/switchLeftLimit"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/notificationLabel"/>


        <LinearLayout
            android:id="@+id/notificationLineBottom"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:orientation="horizontal"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="16dp"
            android:layout_marginStart="32dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/notificationLabel"
            app:layout_constraintRight_toRightOf="parent"/>

        <android.support.constraint.Guideline
            android:id="@+id/newsSourceBottomLimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5"/>

        <ImageView
            android:id="@+id/newsSourceIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            app:srcCompat="@drawable/news_icon"
            android:tint="@color/configTabColor"
            app:layout_constraintTop_toBottomOf="@id/notificationLineBottom"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/iconRightLimit"
            app:layout_constraintBottom_toTopOf="@id/newsSourceBottomLimit" />

        <TextView
            android:id="@+id/newsSourceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:text="@string/select_news_source_config_title"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@id/notificationLineBottom"
            app:layout_constraintLeft_toRightOf="@id/iconRightLimit"
            app:layout_constraintRight_toLeftOf="@id/switchLeftLimit"
            app:layout_constraintBottom_toTopOf="@id/newsSourceBottomLimit"/>

        <LinearLayout
            android:id="@+id/newsSourceBottomLine"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:orientation="horizontal"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="16dp"
            android:layout_marginStart="32dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/newsSourceTitle"
            app:layout_constraintRight_toRightOf="parent"/>

        <android.support.constraint.Guideline
            android:id="@+id/translateBottomLimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            app:layout_constraintGuide_percent="0.6"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <ImageView
            android:id="@+id/translateIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:tint="@color/configTabColor"
            app:srcCompat="@drawable/ic_g_translate_black_24dp"
            app:layout_constraintTop_toBottomOf="@id/newsSourceBottomLimit"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/iconRightLimit"
            app:layout_constraintBottom_toTopOf="@id/translateBottomLimit"/>

        <TextView
            android:id="@+id/translateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:text="@string/news_translation_config_title"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@id/newsSourceBottomLimit"
            app:layout_constraintLeft_toRightOf="@id/iconRightLimit"
            app:layout_constraintRight_toLeftOf="@id/switchLeftLimit"
            app:layout_constraintBottom_toTopOf="@id/translateBottomLimit" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/translateSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="@id/translateLabel"
            app:layout_constraintLeft_toRightOf="@id/switchLeftLimit"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/translateLabel"/>

        <LinearLayout
            android:id="@+id/translateBottomLine"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:orientation="horizontal"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="16dp"
            android:layout_marginStart="32dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/translateLabel"
            app:layout_constraintRight_toRightOf="parent"/>

        <android.support.constraint.Guideline
            android:id="@+id/helpBottomLimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.7"/>

        <ImageView
            android:id="@+id/helpIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:tint="@color/configTabColor"
            app:srcCompat="@drawable/ic_help_black_24dp"
            app:layout_constraintTop_toBottomOf="@id/translateBottomLine"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/iconRightLimit"
            app:layout_constraintBottom_toTopOf="@id/helpBottomLimit"/>

        <TextView
            android:id="@+id/helpLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:text="@string/help_config"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@id/translateBottomLine"
            app:layout_constraintLeft_toRightOf="@id/iconRightLimit"
            app:layout_constraintRight_toLeftOf="@id/switchLeftLimit"
            app:layout_constraintBottom_toTopOf="@id/helpBottomLimit"/>

        <LinearLayout
            android:id="@+id/helpBottomLine"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:orientation="horizontal"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="16dp"
            android:layout_marginStart="32dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/helpLabel"
            app:layout_constraintRight_toRightOf="parent"/>

    </android.support.constraint.ConstraintLayout>
</layout>