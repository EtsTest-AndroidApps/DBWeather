<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <!-- Transparent themes for notifications and custom dialog -->
    <style name="Theme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@drawable/notification_background</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="NewsActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:drawable/dialog_holo_light_frame</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!--Switch theme -->
    <style name="Theme.Switch" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/switchColorOn</item>
        <item name="colorControlActivated">@color/switchColorOn</item>
        <item name="colorSwitchThumbNormal">@color/switchColorThumbNormal</item>
        <item name="android:colorForeground">@color/switchColorNormal</item>
        <item name="android:textOn">On</item>
        <item name="android:textOff">Off</item>
    </style>

    <color name="switchColorForeground">#30bdbdbd</color>

    <!--ProgressBar Theme-->
    <style name="Theme.ProgressBarTheme" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:autoStart">true</item>
        <item name="android:indeterminate">true</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:scaleY">3.0</item>
    </style>

    <style name="Theme.LocationProgress" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:minHeight">8dp</item>
        <item name="android:indeterminateOnly">true</item>
    </style>

    <style name="ToolBarStyle" parent="">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:colorBackground">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:minHeight">@dimen/action_bar_default_height_material</item>
    </style>

    <style name="Theme.TextView" parent="android:TextAppearance.Holo.Widget.TextView">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:selectable">false</item>
    </style>

</resources>
